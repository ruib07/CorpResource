@using CorpResource.Themes
@inherits LayoutComponentBase

<PageTitle>CorpResource</PageTitle>

<MudThemeProvider Theme="@ThemeConfig.LightTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudAppBar Elevation="1" Color="Color.Default" Class="appbar-header">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="@ToggleDrawer" />
    <MudText Typo="Typo.h6" Class="ml-2">CorpResource</MudText>
    <MudSpacer />
    <MudText Typo="Typo.subtitle1">Teste</MudText>
</MudAppBar>

<MudDrawer Open="@_drawerOpen"
           Anchor="Anchor.Left"
           Variant="DrawerVariant.Responsive"
           Elevation="1"
           Class="drawer-custom fixed-drawer"
           OnClose="()=> _drawerOpen = false">
    <NavMenu />
</MudDrawer>

<div class="page">
    <main class="@MainContentClass">
        <article class="content px-4" style="padding-top: 6rem;">
            @Body
        </article>
    </main>
</div>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    private string MainContentClass =>
        _drawerOpen ? "main-content main-content--shifted" : "main-content";
}

